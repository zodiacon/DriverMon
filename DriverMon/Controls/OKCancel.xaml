<StackPanel x:Class="DriverMon.Controls.OKCancel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DriverMon.Controls"
             mc:Ignorable="d" Orientation="Horizontal" HorizontalAlignment="Center"
             d:DesignHeight="40" d:DesignWidth="300" TextElement.FontSize="15">
    <Button Command="{Binding OKCommand}" HorizontalContentAlignment="Center" Width="80" Margin="15,0,0,0">
        <StackPanel Orientation="Horizontal">
            <Image Source="/icons/ok.ico" Width="20" Height="20" />
            <TextBlock Text="OK" Margin="6,0,0,0"  VerticalAlignment="Center" />
        </StackPanel>
    </Button>

    <Button Command="{Binding CancelCommand}" Margin="15,0,0,0" HorizontalContentAlignment="Center" Width="80">
        <StackPanel Orientation="Horizontal">
            <Image Source="/icons/cancel.ico" Width="20" Height="20" />
            <TextBlock Text="Cancel" Margin="6,0,0,0" VerticalAlignment="Center" />
        </StackPanel>
    </Button>
</StackPanel>
